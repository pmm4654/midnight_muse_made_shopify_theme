# Copy this file to .env and fill in your values
# =============================================================

# --- Meta (Facebook) Marketing API ---
# Create an app at https://developers.facebook.com/apps/
META_APP_ID=
META_APP_SECRET=

# Your Meta Ad Account ID (format: act_XXXXXXXXX)
# Find at https://business.facebook.com/settings/ad-accounts
META_AD_ACCOUNT_ID=

# Long-lived access token (generated during setup wizard)
META_ACCESS_TOKEN=

# Meta Marketing API version
META_API_VERSION=v21.0

# --- Shopify Store ---
# Your Shopify store domain (e.g., your-store.myshopify.com)
SHOPIFY_STORE_DOMAIN=

# Shopify Storefront Access Token (for reading products/collections)
# Create at: Settings > Apps and sales channels > Develop apps
SHOPIFY_STOREFRONT_TOKEN=

# Shopify Admin API Access Token (for order/customer data)
SHOPIFY_ADMIN_TOKEN=

# --- Anthropic Claude API ---
# Get your API key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# --- App Configuration ---
PORT=3456
SESSION_SECRET=change-this-to-a-random-string
APP_URL=http://localhost:3456
