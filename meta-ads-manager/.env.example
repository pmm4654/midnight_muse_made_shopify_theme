# =============================================================
# Meta Ads Manager — Environment Variables
# Copy this file to .env and fill in your values.
# These are the ONLY source of credentials. The web UI never
# reads or writes this file — it only checks which vars are set.
# =============================================================

# --- Facebook (Meta) Marketing API ---
# Create an app at https://developers.facebook.com/apps/
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Your Facebook Ad Account ID (format: act_XXXXXXXXX)
# Find at https://business.facebook.com/settings/ad-accounts
FACEBOOK_AD_ACCOUNT_ID=

# Long-lived access token (generate via OAuth flow or Graph API Explorer)
FACEBOOK_ACCESS_TOKEN=

# Optional: API version override (default: v21.0)
# FACEBOOK_API_VERSION=v21.0

# --- Shopify Store ---
# Your store's myshopify.com domain (used for API calls)
SHOPIFY_STORE_DOMAIN=your-store.myshopify.com

# Shopify app client ID (from your custom app's API credentials)
SHOPIFY_CLIENT_ID=

# Admin API access token (shpat_xxx)
# Create at: Settings > Apps and sales channels > Develop apps
SHOPIFY_API_KEY=

# --- Anthropic Claude API ---
# Get your API key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# --- App Configuration ---
PORT=3456
APP_URL=http://localhost:3456
